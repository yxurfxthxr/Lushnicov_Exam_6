        </Label>
        <TextBox x:Name="TextBox1" HorizontalAlignment="Center" Height="19" Width="250" Margin="0,62,0,0" TextWrapping="Wrap" VerticalAlignment="Top"></TextBox>
        <TextBox x:Name="TextBox2" HorizontalAlignment="Center" Height="19" Width="250" TextWrapping="Wrap" VerticalAlignment="Top" Margin="0,116,0,0"/>
        <Button x:Name="button1" Content="Войти" HorizontalAlignment="Center" Height="26" Width="250" Margin="0,153,0,0" VerticalAlignment="Top" Click="Button1_Click" IsDefault="True" >
        </Button>
    </Grid>
</Window>
